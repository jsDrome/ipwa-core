{
  "name": "@jsdrome/jsdrome",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "webpack --config=node_modules/@jsdrome/webpack-config",
    "build:client:dev": "npm run build -- --env=client/web/dev",
    "build:client:dev:watch": "npm run build:client:dev -- --watch",
    "build:client:devserver": "webpack-dev-server --config=node_modules/@jsdrome/webpack-config --env=client/web/dev",
    "build:client:prod": "npm run build -- --env=client/web/prod",
    "build:client:prod:watch": "npm run build:client:prod -- --watch",
    "build:server:dev": "npm run build -- --env=server/dev",
    "build:server:dev:watch": "npm run build:server:dev -- --watch",
    "build:server:prod": "npm run build -- --env=server/prod",
    "build:server:prod:watch": "npm run build:server:prod -- --watch",
    "build:server:firebase": "npm run build -- --env=server/firebase",
    "build:docker": "docker-compose -f infra/docker/docker-compose.yml up --build",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:codecov": "codecov -t $CODECOV_TOKEN",
    "test:cypress": "cypress open --config-file=tests/cypress/cypress.json",
    "test:cypress:run": "cypress run --config-file=tests/cypress/cypress.json --record --key $CYPRESS_TOKEN",
    "test:puppeteer": "node tests/puppeteer/",
    "test:percy": "percy exec -- node tests/percy/",
    "test:scripts": "sh ./scripts/test-scripts.sh",
    "release:heroku": "sh ./scripts/release_heroku.sh",
    "release:firebase": "sh ./scripts/release_firebase.sh",
    "release:dockerhub": "sh ./scripts/release_dockerhub.sh",
    "release:github": "sh ./scripts/release_github.sh",
    "release:npm": "sh ./scripts/release_npm.sh",
    "release:expo": "sh ./scripts/release_expo.sh",
    "release:helm": "sh ./scripts/release_helm.sh",
    "firebase:serve": "firebase serve",
    "firebase:shell": "firebase functions:shell",
    "firebase:logs": "firebase functions:log",
    "clean": "rimraf ./*.log dist coverage .firebase .expo web-build",
    "dev": "concurrently --kill-others \"npm run build:client:dev:watch\" \"npm run build:server:dev:watch\" -n client,server -c blue,yellow",
    "prod": "concurrently --kill-others \"npm run build:client:prod:watch\" \"npm run build:server:prod:watch\" -n client,server -c blue,yellow",
    "lint": "eslint .",
    "nodemon": "cd dist && nodemon index.js --watch dist/index.js",
    "start": "cd dist && node ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jsDrome/jsdrome.git"
  },
  "keywords": [
    "jsdrome",
    "boilerplate"
  ],
  "author": "Sreeram Padmanabhan",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jsDrome/jsdrome/issues"
  },
  "homepage": "https://github.com/jsDrome/jsdrome#readme",
  "dependencies": {
    "@jsdrome/components": "^1.2.0",
    "@material-ui/core": "^4.9.11",
    "axios": "^0.19.2",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "firebase": "^7.14.2",
    "firebase-admin": "^8.11.0",
    "firebase-functions": "^3.6.1",
    "firebase-tools": "^8.1.1",
    "lodash": "^4.17.15",
    "md5": "^2.2.1",
    "morgan": "^1.10.0",
    "nodemailer": "^6.4.6",
    "object-path-immutable": "^3.1.1",
    "passport": "^0.4.1",
    "passport-facebook": "^3.0.0",
    "passport-linkedin": "^1.0.0",
    "querystring": "^0.2.0",
    "rc": "^1.2.8",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "redux": "^4.0.5",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@jsdrome/babel-preset-jsdrome": "^1.2.0",
    "@jsdrome/commitlint-config": "^1.1.0",
    "@jsdrome/eslint-config": "^1.1.0",
    "@jsdrome/webpack-config": "^1.3.0",
    "@percy/script": "^1.0.3",
    "babel-jest": "^25.4.0",
    "babel-preset-expo": "^8.1.0",
    "codecov": "^3.6.5",
    "concurrently": "^5.2.0",
    "cypress": "^4.4.1",
    "husky": "^4.2.5",
    "jest": "^25.4.0",
    "puppeteer": "^3.0.1",
    "react-test-renderer": "^16.13.1",
    "rimraf": "^3.0.2"
  },
  "eslintConfig": {
    "extends": "@jsdrome/eslint-config"
  },
  "commitlint": {
    "extends": [
      "@jsdrome/commitlint-config"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "jest": {
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ],
    "moduleNameMapper": {
      "@src(.*)$": "<rootDir>/src/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/jest/__mocks__/fileMock.js",
      "\\.(css|less)$": "<rootDir>/tests/jest/__mocks__/styleMock.js"
    },
    "modulePathIgnorePatterns": [
      "cypress",
      "puppeteer"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(@jsdrome/*)/)"
    ]
  },
  "engines": {
    "node": "8"
  }
}
